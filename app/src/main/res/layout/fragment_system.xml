<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/fragment_system_system"/>

            <TextView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/system"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/row_divider"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="1dp" />

            <TextView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/fragment_system_panels"/>

            <TextView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/panels"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/row_divider"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="1dp" />

            <TextView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/fragment_system_inverter"/>

            <TextView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/inverter"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/row_divider"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="1dp" />

            <TextView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/fragment_system_statistics"/>

            <TextView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/statistics"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
